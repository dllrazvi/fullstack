{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*", "**/.env"],
  "tasks": {
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "inputs": ["**/*.{js,ts,tsx}"]
    },
    "type-check": {
      "inputs": ["**/*.{ts,tsx}"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    }
  }
}
